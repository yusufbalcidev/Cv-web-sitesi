@using MvcCv.Models.Entity
@model List<TblYeteneklerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string renk = ""; }
@{ string labelRenk = ""; }
<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Yetenek Listem</h3>
                            </div>
                            <div class="card-body">
                                <a href="/Yetenek/YeniYetenek/" class=" btn btn-info">Yeni Yetenek</a>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Yetenek</th>
                                            <th>Derece</th>
                                            <th style="width: 40px">Oran</th>
                                            <th>Düzenle</th>




                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            if (item.Oran <= 50 && item.Oran >= 0)
                                            {
                                                renk = "progress-bar progress-bar-danger";
                                                labelRenk = "badge bg-danger";
                                            }
                                            if (item.Oran > 50 && item.Oran <= 70)
                                            {
                                                renk = "progress-bar bg-warning";
                                                labelRenk = "badge bg-warning";
                                            }
                                            if (item.Oran > 70 && item.Oran <= 85)
                                            {
                                                renk = "progress-bar bg-primary";
                                                labelRenk = "badge bg-primary";

                                            }
                                            if (item.Oran > 85 && item.Oran <= 100)
                                            {
                                                renk = "progress-bar bg-success";
                                                labelRenk = "badge bg-succes";

                                            }

                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.Yetenek</td>
                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="@renk" style="width: @item.Oran%"></div>
                                                    </div>
                                                </td>
                                                <td><span class="@labelRenk">@item.Oran%</span></td>

                                                <td>
                                                    <a class="btn btn-info btn-sm" href="/Yetenek/YetenekDuzenle/@item.ID ">
                                                        <i class="fas fa-pencil-alt">
                                                        </i>
                                                        Düzenle
                                                    </a>
                                                    &nbsp;
                                                    &nbsp;

                                                    <a class="btn btn-danger btn-sm" href="/Yetenek/YetenekSil/@item.ID">
                                                        <i class="fas fa-trash">
                                                        </i>
                                                        Delete
                                                    </a>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

</body>
</html>


