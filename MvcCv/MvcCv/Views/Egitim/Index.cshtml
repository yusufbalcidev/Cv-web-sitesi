@using MvcCv.Models.Entity
@model List<TblEgitimlerim>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Eğitim Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>Alt Başlık2</th>
        <th>GNO</th>
        <th>Tarih</th>
        <th>İşlemler</th>
        
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.Baslik</td>
            <td>@x.AltBaslik</td>
            <td>@x.Altbaslik2</td>
            <td>@x.GNO</td>
            <td>@x.Tarih</td>
            <td>
                <a class="btn btn-danger btn-sm" href="/Egitim/EgitimSil/@x.ID">
                    <i class="fas fa-trash">
                    </i>
                    Sil
                </a>
                
           
                &nbsp;
                &nbsp;
                <a class="btn btn-info btn-sm" href="/Egitim/EgitimDuzenle/@x.ID ">
                    <i class="fas fa-pencil-alt">
                    </i>
                    Düzenle
                </a>



            </td>
        </tr>

    }

</table>
<a href="/Egitim/EgitimEkle/" class=" btn btn-primary">Yeni Eğitim Ekle</a>