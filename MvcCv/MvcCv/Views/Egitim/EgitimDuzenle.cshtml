@model  MvcCv.Models.Entity.TblEgitimlerim

@{
    ViewBag.Title = "EgitimDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<h4>Yeni Eğitim Bilgisi Düzenleme Sayfası  </h4>
<br />
<form method="post">
    @Html.Label("Başlık giriniz")
    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Baslik, "", new { @style = "color:red" })
    <br />
    @Html.Label("Alt başlık giriniz")
    @Html.TextBoxFor(x => x.AltBaslik, new { @class = "form-control" })

    <br />

    @Html.Label("Alt başlık hakkında bilgi giriniz")
    @Html.TextBoxFor(x => x.Altbaslik2, new { @class = "form-control" })
    <br />

    @Html.Label("Genel not ortalamasını giriniz")
    @Html.TextBoxFor(x => x.GNO, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.GNO, "", new { @style = "color:blue" })


    <br />
    @Html.Label("Tarihi giriniz")
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })

    <br />

    <br />
    <button class=" btn btn-info">Kaydet</button>
</form>


