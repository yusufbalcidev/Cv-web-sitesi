@using MvcCv.Models.Entity
@model  List<TblSertifikalarim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-content">
                                <!-- Activity Tab -->
                                <div class="tab-pane" id="activity">
                                    <p>Buraya activity sekmesiyle ilgili içerik ekleyebilirsiniz.</p>
                                </div>
                                <!-- Timeline Tab (ACTIVE) -->
                                <div class="tab-pane active" id="timeline">
                                    <div class="timeline timeline-inverse">
                                        @foreach (var x in Model)
                                        {
                                            int sayi = x.ID;
                                            if (sayi % 2 == 0)
                                            {
                                                <div class="time-label">

                                                    <a href="/Sertifika/SertifikaGetir/@x.ID" class="btn btn-dark">
                                                        <span class="bg-body">
                                                            @x.Tarih
                                                        </span>

                                                    </a>


                                                </div>
                                            }
                                            else
                                            {
                                                <div class="time-label">

                                                    <a href="/Sertifika/SertifikaGetir/@x.ID" class="btn btn-info">
                                                        <span class="bg-body">
                                                            @x.Tarih
                                                        </span>

                                                    </a>


                                                </div>
                                            }


                                            <div>
                                                <i class="fas fa-comment bg-primary"></i>
                                                <div class="timeline-item">
                                                    <div class="timeline-body">
                                                        @x.Aciklama
                                                    </div>

                                                </div>
                                            </div>
                                        }

                                    </div>
                                    <a href="/Sertifika/YeniSertifika/" class="btn btn-success">Yeni Sertifika</a>
                                </div>
                                <!-- Settings Tab -->
                                <div class="tab-pane" id="settings">
                                    <p>Settings sekmesi içeriği burada olacak.</p>
                                </div>
                            </div><!-- /.tab-content -->
                        </div><!-- /.card-body -->
                        </div><!-- /.card-body -->
                    </div><!-- /.card -->
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
</body>
</html>
